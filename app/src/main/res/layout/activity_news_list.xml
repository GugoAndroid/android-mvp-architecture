<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_news_list_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_news_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:padding="10dp"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/activity_news_list_recycler_view_loading"
        android:layout_width="@dimen/view_size_4"
        android:layout_height="@dimen/view_size_4"
        android:layout_gravity="center" />

</FrameLayout>